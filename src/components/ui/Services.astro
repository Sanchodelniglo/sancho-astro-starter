---
const { services = [] } = Astro.props;
---
<section class="py-16 bg-background">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-3xl font-bold text-primary mb-8">Our Services</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {services.map(service => (
        <div class="p-6 border border-secondary rounded-lg">
          <h3 class="text-xl font-semibold text-primary">{service.title}</h3>
          <p class="mt-2 text-secondary">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>