<section class="py-16 bg-background">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-3xl font-bold text-primary text-center mb-8">Contact Us</h2>
    <form class="space-y-6">
      <input type="text" placeholder="Name" class="w-full p-3 border border-secondary rounded-md" required />
      <input type="email" placeholder="Email" class="w-full p-3 border border-secondary rounded-md" required />
      <textarea placeholder="Message" class="w-full p-3 border border-secondary rounded-md" rows="5" required></textarea>
      <button type="submit" class="w-full bg-primary text-background py-3 rounded-md hover:opacity-90">Send Message</button>
    </form>
  </div>
</section>